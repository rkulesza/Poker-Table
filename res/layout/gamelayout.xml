<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
android:id="@+layout/gamelayout"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
android:background="@drawable/layoutmaster">
<RelativeLayout
android:id="@+layout/botoesgamelayout"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:padding="8px"
>
<Button
android:id="@+button/bt_game_newgame"
android:layout_width="220px"
android:layout_height="65px"
android:background="@drawable/newgame"
android:layout_alignParentRight="true"
>
</Button>
</RelativeLayout>

<Button
    android:id="@+button/bt_game_search"
    android:layout_width="220px"
    android:layout_height="65px"
    android:layout_x="165dp"
    android:layout_y="58dp"
    android:background="@drawable/searchgame" />

<Button
    android:id="@+button/bt_game_ranking"
    android:layout_width="220px"
    android:layout_height="65px"
    android:layout_x="164dp"
    android:layout_y="106dp"
    android:background="@drawable/ranking" />

<Button
    android:id="@+button/bt_game_logout"
    android:layout_width="220px"
    android:layout_height="65px"
    android:layout_x="162dp"
    android:layout_y="154dp"
    android:background="@drawable/logout" />

</AbsoluteLayout>
